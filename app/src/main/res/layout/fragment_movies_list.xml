<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FragmentMoviesList">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/movie_list_background"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/movie_list_top_menu_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="44dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/image_button_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/combined_shape"
            android:background="@color/background_empty"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_list_top_menu_guideline"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background_empty"
            android:fontFamily="@font/roboto_black"
            android:lineHeight="20dp"
            android:text="@string/movie_list_top_menu_text"
            android:textAllCaps="false"
            android:textColor="#ECECEC"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_button_list"
            app:layout_constraintStart_toEndOf="@id/image_button_list"
            app:layout_constraintTop_toTopOf="@+id/image_button_list" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/movie_list_movie_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="102dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/movie_list_fragment_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_list_movie_guideline"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/movie_list_fragment_mask"
            app:layout_constraintTop_toBottomOf="@id/movie_list_movie_guideline"
            app:layout_constraintStart_toStartOf="parent"
            />
        
        <ImageView
            android:id="@+id/pg_background_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/movie_list_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_list_movie_guideline"
            />

        <TextView
            android:id="@+id/pg_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/pg_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/pg_background_view"
            app:layout_constraintEnd_toEndOf="@id/pg_background_view"
            app:layout_constraintStart_toStartOf="@id/pg_background_view"
            app:layout_constraintTop_toTopOf="@id/pg_background_view"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>